<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Calc4Life.Views.EditConstPage"
             Title="Add constant">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding SaveCommand}">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="Android" Value="save.png" />
                    <On Platform="iOS" Value="save.png" />
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Enter constant name">
                    <EntryCell Keyboard="Text" Placeholder="it can't be empty" Text="{Binding Name}" />
                </TableSection>
                <TableSection Title="Enter constant value">
                    <EntryCell Keyboard="Numeric" Placeholder="it can't be empty" Text="{Binding Value}"/>
                </TableSection>
                <TableSection Title="Enter constant notes">
                    <EntryCell Keyboard="Text" Placeholder="optional" Text="{Binding Note}"/>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>