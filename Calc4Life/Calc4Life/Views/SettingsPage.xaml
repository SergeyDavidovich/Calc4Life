<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Calc4Life.Views.SettingsPage"
             Title="Settings">
    <ContentPage.Resources>
        <ResourceDictionary>

        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start">
            <TableView Intent="Settings" Margin="10">
                <TableRoot>
                    <TableSection>
                        <SwitchCell x:Name="SwithToDefaults" Text="Set to defaults" On="True" OnChanged="SwithToDefaults_OnChanged"/>
                    </TableSection>
                    <TableSection>
                        <SwitchCell x:Name="SwithchToShowThousands" Text="Show thousands" On="True" IsEnabled="False" />
                    </TableSection>
                    <TableSection>
                        <SwitchCell x:Name="SwitchToRoundResult" Text="Round up result" On="False"/>
                        <ViewCell IsEnabled="True">
                            <StackLayout>
                                <Slider x:Name="SliderSelectChars" Value="2" Maximum="6" Minimum="0"/>
                                <Label x:Name="LabelShowChars" Text="to 2 characters" Margin="14,0,0,0"/>
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
            <StackLayout Orientation="Horizontal" Margin="20,20,0,0" VerticalOptions="StartAndExpand" HorizontalOptions="Center">
                <Label Text="Sample:" FontSize="Large" VerticalOptions="Center"/>
                <Label x:Name="LabelSample" Text="1 234 567.56" TextColor="Crimson" FontSize="30" Margin="10,0,0,0" VerticalOptions="Center"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
